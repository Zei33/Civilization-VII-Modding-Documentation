<?xml version="1.0" encoding="utf-8"?>
<Mod id="com.example.ui-enhancement-mod" version="1"
	xmlns="ModInfo">
	<Properties>
		<Name>LOC_MOD_ENHANCED_TOOLTIP_NAME</Name>
		<Description>LOC_MOD_ENHANCED_TOOLTIP_DESCRIPTION</Description>
		<Authors>Your Name</Authors>
		<Package>Mod</Package>
		<AffectsSavedGames>0</AffectsSavedGames>
	</Properties>
	<Dependencies>
		<Mod id="base-standard" title="LOC_MODULE_BASE_STANDARD_NAME"/>
	</Dependencies>
	<ActionCriteria>
		<Criteria id="always">
			<AlwaysMet></AlwaysMet>
		</Criteria>
	</ActionCriteria>
	<ActionGroups>
		<ActionGroup id="ui-enhancement-group" scope="game" criteria="always">
			<Properties>
				<LoadOrder>1000</LoadOrder>
			</Properties>
			<Actions>
				<ImportFiles>
					<Item>ui/scripts/enhanced-tooltip.js</Item>
					<Item>ui/styles/enhanced-tooltip.css</Item>
					<Item>ui/icons/tooltip_enhancement_icon.png</Item>
				</ImportFiles>
				<UpdateText>
					<Item>text/en_us/LocalizedText.xml</Item>
				</UpdateText>
			</Actions>
		</ActionGroup>
	</ActionGroups>
	<LocalizedText>
		<File>text/en_us/LocalizedText.xml</File>
	</LocalizedText>
</Mod> 